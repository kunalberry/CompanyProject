@model IEnumerable<HtmlHelper1.Models.Employee>
    @using GridMvc.Html;
    @{
        ViewBag.Title = "EditView";
    }

    <h2>EditView</h2>

    @Html.Grid(Model).Columns(col =>
{
    col.Add(x => x.Name).Titled("Names").Sortable(true);
    col.Add(x => x.Dateofbirth).Titled("Date Of Birth").Sortable(false);
    col.Add(x => x.Phone).Titled("Phone").Sortable(false);
    col.Add(x => x.Email).Titled("Email").Sortable(false);
    col.Add(x => x.Department).Titled("Department").Sortable(false);
    col.Add(x => x.Address).Titled("Address").Sortable(false);
    col.Add(x => x.States).Titled("States").Sortable(false);
    col.Add(x => x.City).Titled("City").Sortable(false);
    col.Add(x => x.Zip).Titled("Zip").Sortable(false);
    col.Add(x => x.Dateofjoin).Titled("Dateofjoin").Sortable(false);
    col.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "EditEmployee", new { id = o.EmpId }));
    col.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.EmpId }));

}).WithPaging(3).Sortable(true)

